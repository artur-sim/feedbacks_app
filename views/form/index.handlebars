<div class="container">
    {{#each comments}}
    <div class="row">
        <div class="col s12 ">
            <div class="card  ">
                <div class="card-content black-text">
                    <span class="card-title">{{first_name}} commented on {{date}}</span>
                    <p> {{text}}</p>
                    <p>Contact email: {{email}}</p>
                </div>
                <div class="card-action">
                    <form action=""><a href="/download/feedback?name={{first_name}}&date={{date}}">Download</a></form>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    <div class="row">
        <form class="col s12" id='form' action="feedbacks" method="POST">
            <h3>Submit your comments</h3>
            <div class="row">
                <div class="input-field col s12">
                    <input id="first_name" type="text" name="first_name" required class="validate">
                    <label for="first_name">First Name</label>
                </div>

            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="email" type="email" name="email" class="validate" required>
                    <label for="email">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input disabled id="date" type="text" value={{date}} name="date_d">
                    <input name="date" value="{{date}}" hidden readonly>
                    <label for="date">Date</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <textarea id="textarea1" class="materialize-textarea" name="text" data-rows="6"></textarea>
                    <label for="textarea1">Textarea</label>
                </div>
            </div>
            <button class="btn green" id="submitBtn" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
            </button>

        </form>
    </div>
    <br>
</div>
<script>
    $(document).ready(() => {
        $('select').formSelect();




    })

</script>